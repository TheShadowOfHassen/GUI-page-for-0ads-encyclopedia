<?xml version="1.0" encoding="utf-8"?>
<object name="relatedArticlesPanel">
	<object name="relatedArticlesBackground" type="image" sprite="BlackGoldenPanel"/>
    <object name="relatedArticlesTitle" type="text" font="sans-bold-20" textcolor="230 190 80" text_align="center" text_valign="center" size="18 0 100%-18 15%">
		<translatableAttribute id="caption">related articles:</translatableAttribute>
	</object>
   <object name="relatedArticlesWarning" type="text" style="ModernLabelText" size="20 15% 100%-20 15%+100">
		<translatableAttribute id="caption">This article seems lonely: it is not related to any others. :(</translatableAttribute>
	</object>
	<object name="relatedArticlesButtons">
		<repeat count="14">
			<object name="relatedArticlesButton[n]" type="button" style="GrayLabelButton"/>
	    </repeat>
	</object>
</object>
